{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":automergeMinor",
    ":semanticCommitTypeAll(chore)",
  ],
	"baseBranches": ["next"],
	"labels": ["dependencies"],
	"lockFileMaintenance": {
    "enabled": true,
		"schedule": [
			"* * * * 0/2"
		]
	},
	"ignoreDeps": [
		"@biomejs/biome",

		// engines
		"node",
		"pnpm",

	],

	// angular: pin typescript
	"packageRules": [
    {
      "matchPackageNames": ["typescript"],
      "matchPaths": ["packages/angular/package.json"],
      "matchManagers": ["npm"],
      "enabled": false
    }
  ],

  "postUpdateOptions": ["pnpmDedupe"],
	"rangeStrategy": "bump",
	"schedule": [
		"* * * * 0/2"
	],
}
